# FundChain Environment Configuration Template
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=sqlite:///./fundchain.db
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/fundchain

# Blockchain Configuration
WEB3_PROVIDER_URL=http://localhost:8545
# For mainnet: https://mainnet.infura.io/v3/your-project-id
# For testnet: https://goerli.infura.io/v3/your-project-id

# Private key for contract deployment and admin operations
# WARNING: Never use this key in production!
PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Contract addresses (will be populated after deployment)
CONTRACT_ADDRESSES_FILE=./contracts/deployed_contracts.json

# API Configuration
DEBUG=true
API_KEY_SECRET=change_this_secret_key_in_production
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8001,http://127.0.0.1:8001

# Privacy Configuration
PRIVACY_K_THRESHOLD=2
# Minimum number of entries required for k-anonymity protection

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/fundchain.log

# Security Configuration (for production)
# HTTPS_ONLY=true
# SECURE_COOKIES=true
# RATE_LIMIT_PER_MINUTE=60

# External Services (optional)
# INFURA_PROJECT_ID=your_infura_project_id
# ALCHEMY_API_KEY=your_alchemy_api_key
# ETHERSCAN_API_KEY=your_etherscan_api_key

# Notification Configuration (optional)
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password

# Monitoring Configuration (optional)
# SENTRY_DSN=your_sentry_dsn
# PROMETHEUS_PORT=9090